<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:cardUseCompatPadding="true"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="100"
            android:background="@color/cardviewbackground">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"></FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:weightSum="100">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"></FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="80">


                    <TextView
                        android:id="@+id/postByTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Post by: XXX"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/grey_text"
                        android:gravity="left"></TextView>

                    <TextView
                        android:id="@+id/datePostedTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date Posted: "
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/grey_text"
                        android:gravity="left"></TextView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Grade:"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/grey_text"
                        android:gravity="left"
                        android:id="@+id/gradeTextView">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Review:"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/grey_text"
                        android:gravity="left"></TextView>

                    <TextView
                        android:id="@+id/courseReviewTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="left"
                        android:text="LONG LONG LONG LONG LONG LONG LONG LONG LONG LONG LONG LONG LONG LONG LONG LONG LONG LONG LONG LONG LONG LONG LONG LONG"
                        android:textColor="@color/grey_text"
                        android:textSize="14sp"></TextView>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/courseRowLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        </LinearLayout>

                    </HorizontalScrollView>


                </LinearLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"></FrameLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
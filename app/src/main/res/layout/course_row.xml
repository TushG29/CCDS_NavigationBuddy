<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/courseEntityContainer"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_weight="80">

                <TextView
                    android:id="@+id/courseCodeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:gravity="bottom"
                    android:fontFamily="@font/poppins_bold"
                    android:text="COURSE CODE"></TextView>

                <TextView
                    android:id="@+id/courseTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Course Name Long Name"></TextView>

                <TextView
                    android:id="@+id/courseFavTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="123123"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:weightSum="100"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/favouriteImageView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="70"
                    app:srcCompat="@drawable/ic_course_bookmark_outline"></ImageView>

                <TextView
                    android:id="@+id/ausTextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="XX AUs"
                    android:gravity="center"
                    android:layout_weight="30"></TextView>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>